<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="line">
            <size
                android:width="8dp"
                android:height="3dp" />
            <corners android:radius="2dp" />
            <stroke
                android:width="1dp"
                android:color="@android:color/black" />
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90">
            <shape android:shape="line">
                <size
                    android:width="8dp"
                    android:height="3dp" />
                <corners android:radius="2dp" />
                <stroke
                    android:width="1dp"
                    android:color="@android:color/black" />
            </shape>
        </rotate>
    </item>
</layer-list>